<div class="container-fluid">
	<div class="row">
		<div class="col-xs-7">
			
			<form action class="form-horizontal " ng-submit="buy()">

				<div class="form-group">
					<label for="comment" class="col-sm-3 control-label">Destination</label>
					<div class="col-sm-9">
						<input type="text" class="form-control" placeholder="CustomerID" ng-model="data.destination">
					</div>
				</div>


				<div class="form-group" >
				    <label for="method" class="col-sm-3 control-label">Amount</label>
				    <div class="col-sm-9">
				        <div class="input-group amount-field">
				            <input type="text" class="form-control amount" placeholder="0" ng-model="data.amount">
				            <input type="text" class="form-control mantiss" placeholder="00" ng-model="data.mantissa">
				            
				            <div class="input-group-btn" dropdown  is-open="dds.accs">
				                <button type="button" class="btn btn-default dropdown-toggle" >{{ data.from_account.code }} <span class="caret"></span></button>
				                <ul class="dropdown-menu dropdown-menu-left" role="menu">
				                    <li ng-repeat="account in wallet.data track by account.id">
				                        <a href ng-click="selectAccount(account)">
				                            {{ account.code }} {{ account.balance }} 
				                        </a>
				                    </li>
				                </ul>
				            </div>


				        </div>
				    </div>
				</div>

				








				






				<div class="form-group">
					<label for="comment" class="col-sm-3 control-label">Comment</label>
					<div class="col-sm-9">
						<input type="text" class="form-control" placeholder="Comment" ng-model="data.comment">
					</div>
				</div>


				<div class="clearfix"></div>
				<div class="form-group">
					<div class="col-sm-4 col-sm-offset-3">
						<button type="submit" class="btn btn-info btn-block"><strong>
							CREATE NEW BIL
						</strong></button>
					</div>
					
				</div>
				

			</form>













		</div><!-- col-xs-6 -->
		<div class="col-xs-5">
			





		</div><!-- col-xs-6 -->
		

	</div><!-- row -->
</div>
