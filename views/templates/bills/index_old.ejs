
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="page-header ">
				<h1 class="text thin">
					Bills
				</h1>
			</div>
		</div>
	</div>
</div>

<div class="container margin2x-top margin2x-bottom">
	<div class="row region white shadow  padding2x-top padding2x-bottom">
		




		<div class="col-xs-2">
			
			<ul class="nav nav-pills nav-stacked">
				<li ui-sref-active="active"><a href ui-sref="bills.buy">Invoices</a></li>
				<li ui-sref-active="active"><a href ui-sref="bills.list">Incoming invoices</a></li>
				<li ui-sref-active="active"><a href ui-sref="bills.new">Create bill</a></li>
				<li ui-sref-active="active"><a href ui-sref="bills.history">History</a></li>
			</ul>
		</div>

		<div class="col-xs-10" ui-view="page">

			<table class="table table-hover table-striped">
				<thead>
					<th></th>
					<th>Created / Lifetime</th>
					<th>Owner</th>
					<th>Comment</th>
					<th>Amount / Fee</th>
					<th></th>


				</thead>
				<tbody>
					<tr ng-repeat="invoice in invoices.data">
						<td>
							<i class="fa fa-times-circle"></i>
						</td>
						<td>
							{{ invoice.createdAt | date : 'short' }}
							{{ invoice.lifeTime }}

						</td>
						<td>{{ invoice.owner }}</td>
						<td>{{ invoice.comment }}</td>
						<td>{{ invoice.amount }} {{ invoice.code }}</td>
						<td>
							<a href=""><i class="fa fa-check-circle-o"></i> Accept</a> <br>
							<a href=""><i class="fa fa-times-circle-o"></i> Reject</a>
						</td>
					</tr>


				</tbody>
			</table>

		</div>

	</div>
</div>


